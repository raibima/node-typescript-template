{
  "name": "node-typescript-template",
  "version": "0.1.0",
  "description": "Opinionated template for writing node app with typescript",
  "keywords": [
    "node",
    "typescript",
    "template",
    "boilerplate"
  ],
  "bugs": "https://github.com/raibima/node-typescript-template/issues",
  "license": "MIT",
  "author": "Raibima Putra <rayp1100@gmail.com> (https://github.com/raibima)",
  "repository": "github:raibima/node-typescript-template",
  "scripts": {
    "start": "node bin/app",
    "dev": "nodemon bin/app",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^24.9.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
